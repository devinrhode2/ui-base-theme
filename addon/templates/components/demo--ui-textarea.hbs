{{!- BEGIN-SNIPPET demo--ui-textarea -}}
{{#ui-field kind=kind _activeStates=activeStates size=size type="textarea" as |f|}}
  {{#f.label}}
    {{size}}
  {{/f.label}}

  {{f.input
    value=size
    placeholder=(concat size ", 4 rows")
    rows=4
    error=activeStates.error
    disabled=activeStates.disabled
  }}
{{/ui-field}}
{{!- END-SNIPPET -}}
