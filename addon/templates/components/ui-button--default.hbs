<button
  {{action action.onclick}}
  disabled={{isDisabled}}
  class=":component
         {{classes.size}}
         {{classes.class}}
         {{ui-state states 'active' 'focus' 'disabled' 'loading'}}
         {{if group 'group-button'}}
         {{if group.isFirstChild 'first-child'}}
         {{if group.isLastChild 'last-child'}}"
  id="{{id}}">
  <div class="wrapper {{ui-state states 'active' 'disabled' el='wrapper'}}">
    <div class="label {{ui-state states 'active' 'loading' el='label'}}">
      {{yield}}
    </div>
  </div>
</button>
