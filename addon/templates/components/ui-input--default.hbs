<div class=":component
            {{classes.class}}
            {{classes.size}}">
  <div class="wrapper">
    {{input
      id=ids.input
      type=type
      placeholder=placeholder
      disabled=states.disabled
      aria-labelledby=ids.label
      class=(concat "ui-input--default--input "
                    (ui-state states
                      'disabled:ui-input--default--input--disabled'
                      'error:ui-input--default--input--error'
                    )
             )
      focus-out=focus-out}}
  </div>
</div>
